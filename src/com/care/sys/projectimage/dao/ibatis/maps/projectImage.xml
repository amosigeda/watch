	<insert id="insertProjectImage" parameterClass="com.care.sys.projectimage.domain.ProjectImage">
		insert into projectimage(projectId,downloadpath1,downloadpath2,downloadpath3,downloadpath4,downloadpath5,downloadstatus,update_time,shuo_ming)
						values(#projectId#,#downLoadPath1#,#downLoadPath2#,#downLoadPath3#,#downLoadPath4#,#downLoadPath5#,#downLoadStatus#,#updateTime#,#shuoMing#)
	</insert>
	
	<update id="updateProjectImage" parameterClass="com.care.sys.projectimage.domain.ProjectImage">
		update projectimage
		<dynamic prepend="SET">
			<isNotEmpty prepend="," property="projectId">
				projectId=#projectId#
			</isNotEmpty>
			<isNotEmpty prepend="," property="downLoadPath1">
